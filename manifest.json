{
  "manifest_version": 3,
  "name": "AI 翻译助手",
  "version": "1.0.0",
  "description": "AI驱动的翻译助手，支持多种语言翻译",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "https://dashscope.aliyuncs.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI 翻译助手"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
